# CARA Audio Backend Configuration
# Copy this file to .env and fill in values

# =============================================================================
# MODEL CONFIGURATION - Easy model swapping!
# =============================================================================

# TTS Model Configuration
TTS_MODEL_NAME=tts_models/multilingual/multi-dataset/xtts_v2
TTS_DEVICE=cuda
TTS_COMPUTE_TYPE=float16

# STT Model Configuration  
STT_MODEL_SIZE=large-v3
STT_DEVICE=cuda
STT_COMPUTE_TYPE=float16

# =============================================================================
# AUDIO SETTINGS
# =============================================================================

# Audio output format
AUDIO_SAMPLE_RATE=24000
AUDIO_CHANNELS=1
AUDIO_FORMAT=pcm16

# Streaming settings
STREAMING_CHUNK_SIZE=4096
STREAMING_BUFFER_SECONDS=0.5

# =============================================================================
# JOB QUEUE (Redis)
# =============================================================================

REDIS_URL=redis://localhost:6379/0
JOB_TTL_HOURS=24
MAX_CONCURRENT_JOBS=2

# =============================================================================
# SERVER SETTINGS
# =============================================================================

HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# API Security (optional)
API_KEY=
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Max concurrent streaming sessions per GPU
MAX_STREAMING_SESSIONS=5

# Long-form TTS chunk duration (seconds)
LONGFORM_CHUNK_DURATION=20

# Model preloading
PRELOAD_MODELS=true
